<h1><%= title %></h1>

<%- messages() %>
<% if (errors) { %>
  <ul class="messages">
    <% (errors.array ? errors.array() : errors).forEach(error => { %>
      <li class="error"><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="auth-container">
  <div class="auth-card">
    <p class="auth-intro">Update the vehicle details below.</p>
    <form class="auth-form" id="updateForm" action="/inv/update" method="post">
      <label for="classificationList">Classification</label>
      <%- classificationSelect %>

      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make || inv_make || '' %>">

      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model || inv_model || '' %>">

      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" min="1886" max="3000" required value="<%= locals.inv_year || inv_year || '' %>">

      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" rows="4" required><%= locals.inv_description || inv_description || '' %></textarea>

      <label for="inv_image">Image Path</label>
      <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image || inv_image || '/images/vehicles/no-image.png' %>">

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail || inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required value="<%= locals.inv_price || inv_price || '' %>">

      <label for="inv_miles">Miles</label>
      <input type="number" id="inv_miles" name="inv_miles" min="0" step="1" required value="<%= locals.inv_miles || inv_miles || '' %>">

      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color || inv_color || '' %>">

      <button type="submit" disabled>Update Vehicle</button>

      <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
    </form>
  </div>
</section>

<script src="/js/inv-update.js"></script>
