<h1>Inventory Management</h1>

<%- messages() %>

<section class="management-actions">
  <div class="action-card">
    <h2>Add Classification</h2>
    <p>Create a new vehicle classification to organize inventory.</p>
    <a class="action-link" href="/inv/add-classification">Add Classification</a>
  </div>
  <div class="action-card">
    <h2>Add Inventory</h2>
    <p>Add a new vehicle to the inventory and assign its classification.</p>
    <a class="action-link" href="/inv/add-inventory">Add Inventory</a>
  </div>
</section>

<section class="inventory-management">
  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to view and manage its vehicles.</p>
  <div class="classification-select">
    <%- classificationList %>
  </div>
  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>
</section>

<script src="../../js/inventory.js"></script>
