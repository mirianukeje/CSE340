<h1><%= title %></h1>

<%- messages() %>
<% if (errors) { %>
  <ul class="messages">
    <% (errors.array ? errors.array() : errors).forEach(error => { %>
      <li class="error"><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="account-management">
  <% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p><a href="/account/update/<%= accountData.account_id %>">Update account information</a></p>
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
  <% } else { %>
    <p>Account information unavailable.</p>
  <% } %>
</section>
